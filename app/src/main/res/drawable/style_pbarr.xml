<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/white"/>
            <stroke android:color="#535353" android:width="2sp"/>
            <corners android:radius="10dp" ></corners>
        </shape>
    </item>

    <item>
        <clip>
            <shape>
                <gradient android:angle="45" android:endColor="#C1FF0000"
                    android:startColor="#38FF00"/>
                <stroke android:color="#535353" android:width="2sp"/>
                <corners android:radius="10dp" ></corners>
            </shape>

        </clip>
    </item>
</layer-list>