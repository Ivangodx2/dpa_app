<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/cyan_200"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>


    <item>
        <shape>
            <gradient android:angle="0" android:startColor="@color/cyan_200" android:endColor="@color/light_green_300"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>