<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green_300"

    tools:context=".Popup_cuestionario">


    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="315dp"
        android:background="@drawable/lineas_punteadas_fndo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="SINTOMAS"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/lineas_punteadas_fndo" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Instrucciones:"
            android:textColor="@color/black"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:textSize="20dp"
            android:text="Contesta las preguntas, en base a como te sientas, espera tus resultados al final." />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>