<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_loginbg1"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="249dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409">

        <ImageView
            android:id="@+id/imageDPAOne"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:background="@drawable/img_dpa1"
            android:gravity="center|end"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <Button
        android:id="@+id/button_Especialista"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/btnazul"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingTop="13dp"
        android:paddingEnd="30dp"
        android:paddingBottom="13dp"
        android:singleLine="true"
        android:text="Especialista"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="536dp" />

    <Button
        android:id="@+id/button_Paciente"
        android:layout_width="216dp"
        android:layout_height="51dp"
        android:background="@drawable/btnverde"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingTop="13dp"
        android:paddingEnd="30dp"
        android:paddingBottom="13dp"
        android:singleLine="true"
        android:text="Paciente"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="468dp" />

</androidx.constraintlayout.widget.ConstraintLayout>