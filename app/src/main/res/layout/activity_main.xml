<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_v1"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"

        android:layout_width="wrap_content"
        android:layout_height="524dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/imageDPAOne"
            android:layout_width="421dp"
            android:layout_height="282dp"
            android:background="@drawable/img_dpa1"
            android:gravity="start"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/button_Paciente"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="115dp"
            android:background="@drawable/btnverde"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="ir_inicio_pac"
            android:paddingStart="30dp"
            android:paddingTop="13dp"
            android:paddingEnd="30dp"
            android:paddingBottom="13dp"
            android:singleLine="true"
            android:text="Paciente"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button_Especialista"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="115dp"
            android:background="@drawable/btnazul"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="ir_inicio_S_espe"
            android:paddingStart="30dp"
            android:paddingTop="13dp"
            android:paddingEnd="30dp"
            android:paddingBottom="13dp"
            android:singleLine="true"
            android:text="Especialista"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>