<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_v1"
    tools:context=".registrarse_paciente">

    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="626dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageLogoOne"
            android:layout_width="125dp"
            android:layout_height="107dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="63dp"
            android:background="@drawable/img_logo1"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_logo1" />

        <TextView
            android:id="@+id/txtnombre"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="7.32dp"
            android:layout_marginEnd="48.07dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Nombre" />

        <EditText
            android:id="@+id/EditText_nombre_p"
            android:textColor="@color/black"
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_edit_text" />

        <TextView
            android:id="@+id/txtapellidos_p"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="7.32dp"
            android:layout_marginEnd="48.07dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/EditText_apellidos_p"
            android:textColor="@color/black"
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_edit_text" />

        <TextView
            android:id="@+id/txtcorreo"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="7.32dp"
            android:layout_marginEnd="48.07dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Correo electronico" />

        <EditText
            android:id="@+id/EditText_correo_e_p"
            android:textColor="@color/black"
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_edit_text"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txtnum_tele"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="7.32dp"
            android:layout_marginEnd="48.07dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Número teléfonico" />


        <EditText
            android:id="@+id/editTextTelefono_p"
            android:textColor="@color/black"
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_edit_text"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtedad"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="7.32dp"
            android:layout_marginEnd="48.07dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Edad" />


        <EditText
            android:id="@+id/editTextEdad_p"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/style_edit_text"
            android:ems="10"
            android:inputType="number"
            android:maxLength="3"
            android:paddingLeft="65dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_Registro_bd_pac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48.07dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="48.07dp"
            android:background="@color/light_green_300"
            android:onClick="insertar_p"
            android:paddingStart="27.47dp"
            android:paddingTop="11.9dp"
            android:paddingEnd="28.61dp"
            android:paddingBottom="11.9dp"
            android:singleLine="true"
            android:text="Registrar"
            android:textAllCaps="false"
            android:textColor="@color/black" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>