<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_loginpaciente"
    tools:context=".iniciar_paciente">

    <Button
        android:id="@+id/button6"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:background="#FCFEAE"
        android:text="Recupere su contraseÃ±a aqui"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/button_Iniciar_S_p"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.33" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:layout_marginTop="72dp"
        android:text=".........................................................................................."
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="201dp"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnverde"
        android:ellipsize="end"
        android:gravity="center"
        android:onClick="ir_registro_pac"
        android:paddingStart="27.47dp"
        android:paddingTop="11.9dp"
        android:paddingEnd="28.61dp"
        android:paddingBottom="11.9dp"
        android:singleLine="true"
        android:text="Registrarse Paciente"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Iniciar_S_p" />

    <Button
        android:id="@+id/button_Iniciar_S_p"
        android:layout_width="199dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnverde"
        android:paddingStart="27.47dp"
        android:paddingTop="11.9dp"
        android:paddingEnd="28.61dp"
        android:paddingBottom="11.9dp"
        android:singleLine="true"
        android:text="Iniciar"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="291dp"
        android:layout_height="265dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.251">

        <ImageView
            android:id="@+id/imageLogoOne"
            android:layout_width="167dp"
            android:layout_height="147dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/img_logo1"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_logo1" />

        <TextView
            android:id="@+id/txtCorreoElectron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="7.32dp"
            android:layout_marginEnd="48.07dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Correo Electronico"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/TextEspeEmailAddress_p"
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_edit_text"
            android:inputType="textEmailAddress"
            android:textColor="@color/black" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>