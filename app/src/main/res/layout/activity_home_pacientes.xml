<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_loginpaciente"
    tools:context=".home_pacientes">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="244dp"
        android:layout_height="68dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="HOME"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/Cerrar_S"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/Button_new_Sintomas"
                android:layout_width="150dp"
                android:layout_height="95dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style_home_paciente"
                android:onClick="ir_reg_cuestioneario"
                tools:ignore="OnClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_style_home_paciente"
                    app:tint="#31000000" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_style_home_paciente">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Sintomas"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="57dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="44dp"
                        android:background="@drawable/cuestionario_icn" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Button_new_escucha"
                android:layout_width="150dp"
                android:layout_height="95dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style_home_paciente"
                android:onClick="ir_reg_escucha">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_style_home_paciente"
                    app:tint="#31000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_style_home_paciente">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Escucha"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="57dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="44dp"
                        android:background="@drawable/oido_icn" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/Button_new_Visualiza"
                android:layout_width="150dp"
                android:layout_height="95dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style_home_paciente"
                android:onClick="ir_reg_visualiza"
                tools:ignore="OnClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_style_home_paciente"
                    app:tint="#31000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_style_home_paciente">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Visualiza"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="57dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="40dp"
                        android:background="@drawable/vision_icn" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Button_new_Oprime"
                android:layout_width="150dp"
                android:layout_height="95dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style_home_paciente"
                android:onClick="ir_reg_presiona">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_style_home_paciente"
                    app:tint="#31000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_style_home_paciente">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Oprime"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="57dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="44dp"
                        android:background="@drawable/oprime_icn" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/Button_new_Identifica"
                android:layout_width="150dp"
                android:layout_height="95dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style_home_paciente"
                android:onClick="ir_reg_identifica"
                tools:ignore="OnClick">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_style_home_paciente"
                    app:tint="#31000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_style_home_paciente">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Identifica"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="57dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="40dp"
                        android:background="@drawable/sintomas_icn" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Button_new_Diagnostico"
                android:layout_width="150dp"
                android:layout_height="95dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style_home_paciente"
                android:onClick="ir_reg_diagnostico">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_style_home_paciente"
                    app:tint="#31000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_style_home_paciente">


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Diagnóstico"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="57dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="44dp"
                        android:background="@drawable/resultado_icn" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btnDiagnostico_final"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_style_home_paciente"
            android:onClick="ir_diagnostico_final">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/btn_style_home_paciente"
                app:tint="#31000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_style_home_paciente">


                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Diagnóstico Final"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="57dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="44dp"
                    android:src="@drawable/diagnostico_final_icn" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textNombrePaciente"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:hint="usuario"
        android:background="#DDDDDD"
        android:layout_marginEnd="24dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/Cerrar_S"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/btn_style_inicio"
        android:text="Cerrar sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>