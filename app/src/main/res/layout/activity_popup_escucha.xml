<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/lineas_punteadas_fndo"
    tools:context=".popup_escucha">


    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="315dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="15dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="ESCUCHA"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />


        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:layout_gravity="center"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Instrucciones:"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="265dp"
                android:layout_height="126dp"
                android:text="Selecciona el nivel de ansiedad que te causa al escuchar cada uno de los audios, donde Nivel 1 es bajo y Nivel 4 es alto."
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>