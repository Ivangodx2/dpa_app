<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_loginpacientebg"
    tools:context=".iniciar_sesion_especialista">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="539dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625">

        <ImageView
            android:id="@+id/imageLogoOne"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="40dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_logo1" />

        <TextView
            android:id="@+id/txtCorreoElectron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="7.32dp"
            android:layout_marginEnd="48.07dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Correo Electronico"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/TextEspeEmailAddress"
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_edit_text"
            android:inputType="textEmailAddress"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/EdittxtContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="7.32dp"
            android:layout_marginEnd="48.07dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="ContraseÃ±a"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/EdittextEsepePassword"
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_edit_text"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button_Iniciar_S"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="48.07dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="48.07dp"
            android:background="@drawable/btnverde"
            android:paddingStart="27.47dp"
            android:paddingTop="11.9dp"
            android:paddingEnd="28.61dp"
            android:paddingBottom="11.9dp"
            android:singleLine="true"
            android:text="Iniciar"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginStart="48.07dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="48.07dp"
            android:background="@drawable/btnazul"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="ir_registro_especialista"
            android:paddingStart="27.47dp"
            android:paddingTop="11.9dp"
            android:paddingEnd="28.61dp"
            android:paddingBottom="11.9dp"
            android:singleLine="true"
            android:text="Registrarse"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>